<html>
  <head>
    <title>My Blog</title>
  </head>
  <body>
    <header>
      <div class="container">
        Michael Bottjer
        <div class="new_post"><%= link_to 'new post', new_post_path %></div>
      </div>
    </header>
    <h3>Check These Posts Out:</h3>

    <article class="post">
      <% @posts.each do |post| %>
          <p class="title"><%= post.title %></p>
          <p class="body"><%= post.text %></p>
          <span><%= link_to 'Show', post %></span>
          <span><%= link_to 'Edit', edit_post_path(post) %></span>
          <span><%= link_to 'Destroy', post_path(post), method: :delete, data: {confirm: 'Are you sure?'} %></span>
          <span><%= button_to '☝', post_votes_path(post, direction: 'up') %></span>
          <span><%= button_to '☟', post_votes_path(post, direction: 'down') %></span>
          <span class="votes-count"><%= post.votes_total %></span>
    <% end %>

    </article>
  </body>
</html>


  